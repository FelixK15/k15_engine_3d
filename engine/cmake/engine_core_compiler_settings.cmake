if(COMPILER_IS_GCC)
	if(NOT BUILD_STATIC)
		set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -fpic")
	endif()
elseif(COMPILER_IS_MSVC)
	if(NOT BUILD_STATIC)
		set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} /DK15_BUILD /MP")
	endif()
endif()

if(COMPILER_IS_GCC AND CPP11_IS_AVAILABLE)
	set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=c++11")
endif()